<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CustomAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_bg</item>
        <item name="android:minHeight">12dip</item>
        <item name="android:maxHeight">12dip</item>
        <item name="android:horizontalSpacing">12dp</item>
    </style>

    <style name="customRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_full</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="ui8Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>


    <style name="ListViewDefaultStyle">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">#00000000</item>
        <item name="android:dividerHeight">7dp</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:fadingEdgeLength">0px</item>
        <item name="android:listSelector">@drawable/default_list_selector</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:smoothScrollbar">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="textSizeSmallAPP">
        <item name="android:textSize">10dip</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/business</item>
    </style>

    <style name="textSizeSmall">
        <item name="android:textSize">13dip</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/business</item>
    </style>

    <style name="SearchEditItemStyle">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/content_text_size_14</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">@dimen/dp_5</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/etittext_hint_color</item>
        <item name="android:background">@null</item>
    </style>

    <style name="mypopwindow_anim_style">

        <!-- 指定显示的动画xml -->
        <item name="android:windowEnterAnimation">@anim/anim_popupwindow_show</item>

        <!-- 指定消失的动画xml -->
        <item name="android:windowExitAnimation">@anim/anim_popupwindow_hide</item>
    </style>

</resources>
