<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"

    >
    <!--android:background="@color/lightGrey"-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="260dp">


        <ImageView
            android:id="@+id/iv_shop_top_picture_top_new"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:src="@mipmap/business_default"
            android:scaleType="centerCrop"
            />

        <TextView
            android:text="1/1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/tv_shop_details_picture_top_new"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/iv_shop_top_picture_top_new"
            android:layout_alignEnd="@+id/iv_shop_top_picture_top_new"
            android:gravity="center"
            android:layout_gravity="top|right"
            android:background="@drawable/touming_round_gb"

            android:textColor="@color/white"
            android:visibility="gone"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/public_bg"
        >

        <TextView
            android:id="@+id/tv_shop_name_top_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:layout_marginTop="@dimen/top_bottom_margin"
            android:textSize="@dimen/content_text_size_16"
            android:textColor="@color/black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/top_bottom_margin"
            android:gravity="center"
            >

            <RatingBar
                android:id="@+id/rating_bar_shop_details_top_new"
                style="@style/roomRatingBar"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/score_1_top_new"
                android:numStars="5"
                android:rating="0"
                android:stepSize="1"
                android:isIndicator="true"
                android:layout_height="10dp"/>

            <TextView
                android:id="@+id/tv_shop_xx_top_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/red"
                android:textSize="@dimen/content_text_size_14"
                android:layout_marginLeft="@dimen/left_right_margin"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_shop_type_top_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快餐"
            android:textColor="@color/grey"
            android:layout_marginBottom="@dimen/top_bottom_margin"
            android:layout_marginTop="@dimen/top_bottom_margin"
            android:textSize="@dimen/content_text_size_14"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/top_bottom_margin"
        android:divider="@drawable/line_divider_bg"
        android:showDividers="middle"
        android:background="@drawable/public_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar"
            android:textColor="@color/black"
            android:text=""
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/left_right_margin"
            android:maxLines="2"
            android:ellipsize="end"
            android:drawableLeft="@mipmap/address_icon"
            android:drawablePadding="@dimen/left_right_margin"
            android:background="@drawable/button_input_status_selector"
            android:drawableRight="@mipmap/arrow_right_gray"
            android:paddingRight="@dimen/left_right_margin"
            android:id="@+id/tv_shop_address_top_new"
            android:textSize="@dimen/content_text_size_16"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar"
            android:textColor="@color/black"
            android:text=""
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/left_right_margin"
            android:drawableLeft="@mipmap/phone_icon"
            android:drawablePadding="@dimen/left_right_margin"
            android:background="@drawable/button_input_status_selector"
            android:drawableRight="@mipmap/arrow_right_gray"
            android:paddingRight="@dimen/left_right_margin"
            android:id="@+id/tv_shop_phone_top_new"
            android:textSize="@dimen/content_text_size_16"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar"
            android:textColor="@color/black"
            android:text="商户详情"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/left_right_margin"
            android:drawableLeft="@mipmap/business_icon"
            android:drawablePadding="@dimen/left_right_margin"
            android:background="@drawable/button_input_status_selector"
            android:drawableRight="@mipmap/arrow_right_gray"
            android:paddingRight="@dimen/left_right_margin"
            android:id="@+id/tv_shop_details_top_new"
            android:textSize="@dimen/content_text_size_16"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar"
            android:textColor="@color/black"
            android:text="营业时间:"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/left_right_margin"
            android:drawableLeft="@mipmap/time_icon"
            android:drawablePadding="@dimen/left_right_margin"
            android:background="@drawable/button_input_status_selector"
            android:paddingRight="@dimen/left_right_margin"
            android:id="@+id/tv_shop_hours_top_new"
            android:textSize="@dimen/content_text_size_16"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/top_bottom_margin"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商户详情"

            android:textSize="@dimen/content_text_size_16"
            android:padding="@dimen/left_right_margin"
            />
        <!--
        android:layout_marginLeft="@dimen/left_right_margin"
        android:layout_marginTop="@dimen/left_right_margin"
            android:layout_marginBottom="@dimen/left_right_margin"
        -->
    </LinearLayout>

    <include
        layout="@layout/line_view"
        android:layout_width="match_parent"
        android:layout_height="1px"></include>

    <WebView
        android:id="@+id/wv_shop_details_top_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/top_bottom_margin"
        android:paddingBottom="@dimen/top_bottom_margin"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/top_bottom_margin"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="评论详情"
            android:textSize="@dimen/content_text_size_16"
            android:padding="@dimen/left_right_margin"

            />
    </LinearLayout>


</LinearLayout>