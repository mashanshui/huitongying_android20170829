<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.huixiangshenghuo.app.ui.activityshopcircle.GoodsFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="@dimen/left_right_margin"
        android:paddingRight="@dimen/left_right_margin"
        android:paddingTop="@dimen/top_bottom_margin"
        android:id="@+id/goods_info"
        android:paddingBottom="@dimen/top_bottom_margin">

        <ImageView
            android:layout_width="@dimen/goods_details_image_height"
            android:layout_height="@dimen/goods_details_image_height"
            android:scaleType="centerCrop"
            android:id="@+id/goods_image"
            android:src="@mipmap/business_default"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/content_text_size_14"
            android:layout_toRightOf="@+id/goods_image"
            android:layout_marginLeft="8dp"
            android:id="@+id/goods_name"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="青椒肉丝青椒肉丝青椒肉丝青椒肉丝青椒肉丝青椒肉丝青椒肉丝青椒肉丝青椒肉丝青椒肉丝"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/goods_image"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/goods_name"
            android:layout_marginTop="5dp"
            android:id="@+id/pay_sum"
            android:text="月销售29分"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/goods_image"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/pay_sum"
            android:layout_marginTop="5dp"
            android:id="@+id/price"
            android:text="¥10"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:visibility="visible"
            android:id="@+id/add_button_lin">

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textColor="@color/colorPrimary"
                android:text="-"
                android:textSize="@dimen/title_text_size"
                android:layout_marginRight="@dimen/dp_10"
                android:id="@+id/move_button"
                android:background="@drawable/goods_add_button_selector"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content_text_size_14"
                android:textColor="@color/black"
                android:id="@+id/num"
                android:text="0"/>

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textColor="@color/colorPrimary"
                android:text="+"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/title_text_size"
                android:id="@+id/add_button"
                android:background="@drawable/goods_add_button_selector"/>
        </LinearLayout>

        <Button
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/content_text_size_14"
            android:text="选规格"
            android:textColor="@color/colorPrimaryDark"
            android:paddingRight="5dp"
            android:paddingTop="1dp"
            android:paddingLeft="5dp"
            android:paddingBottom="1dp"
            android:visibility="gone"
            android:id="@+id/select_size"
            android:background="@drawable/button_red_stroke"/>
    </RelativeLayout>


</LinearLayout>
