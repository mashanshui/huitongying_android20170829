<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/mainBackColor"
              tools:context="com.huixiangshenghuo.app.ui.mine.ShopCenterSubmitNewActivity"
    >

    <include
        layout="@layout/title_bar_1"
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        ></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/shop_image"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/business_default"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_bar"
                    android:layout_alignParentBottom="true"
                    android:background="@color/black"
                    android:alpha="0.5"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_bar"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/white"
                    android:text="立即上传店铺图片"
                    android:gravity="center"
                    android:id="@+id/upload"
                    android:textSize="@dimen/content_text_size_16"
                    />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="@drawable/line_divider_bg"
                android:layout_marginTop="@dimen/top_bottom_margin"
                android:background="@drawable/public_bg"
                android:paddingTop="1px"
                android:paddingBottom="1px"
                android:showDividers="middle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_bar"
                    android:paddingLeft="@dimen/left_right_margin"
                    android:paddingRight="@dimen/left_right_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/content_text_size_16"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:minWidth="200dp"
                        android:text="商户名称"/>

                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/name"
                        android:background="@null"
                        android:textSize="@dimen/content_text_size_16"
                        android:hint="输入商户名称"
                        android:textColor="@color/grey"
                        android:gravity="right|center_vertical"
                        android:text=""/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_bar"
                    android:paddingLeft="@dimen/left_right_margin"
                    android:paddingRight="@dimen/left_right_margin"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/content_text_size_16"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:minWidth="200dp"
                        android:text="代理商"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/tuijian"
                        android:background="@null"
                        android:textSize="@dimen/content_text_size_16"
                        android:hint="输入代理商户账号"
                        android:textColor="@color/grey"
                        android:gravity="right|center_vertical"
                        android:text=""/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_bar"
                    android:paddingLeft="@dimen/left_right_margin"
                    android:paddingRight="@dimen/left_right_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/content_text_size_16"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:minWidth="200dp"
                        android:text="所属区域"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/area"
                        android:background="@null"
                        android:textSize="@dimen/content_text_size_16"
                        android:hint="所属区域"
                        android:gravity="right|center_vertical"
                        android:drawableRight="@mipmap/arrow_right_gray"
                        android:drawablePadding="@dimen/left_right_margin"
                        android:textColor="@color/grey"
                        android:text=""/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_bar"
                    android:paddingLeft="@dimen/left_right_margin"
                    android:paddingRight="@dimen/left_right_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/content_text_size_16"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:minWidth="200dp"
                        android:text="定位商户地址"/>

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:id="@+id/address"
                        android:background="@null"
                        android:textSize="@dimen/content_text_size_14"
                        android:hint="商户地址"
                        android:gravity="right|center_vertical"
                        android:drawableRight="@mipmap/arrow_right_gray"
                        android:drawablePadding="@dimen/left_right_margin"
                        android:textColor="@color/grey"
                        android:text=""/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_bar"
                    android:paddingLeft="@dimen/left_right_margin"
                    android:paddingRight="@dimen/left_right_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/content_text_size_16"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:minWidth="200dp"
                        android:text="商户门牌号"/>

                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/address_code"
                        android:background="@null"
                        android:textSize="@dimen/content_text_size_16"
                        android:hint="输入门牌号"
                        android:textColor="@color/grey"
                        android:gravity="right|center_vertical"
                        android:text=""/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_bar"
                    android:paddingLeft="@dimen/left_right_margin"
                    android:paddingRight="@dimen/left_right_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/content_text_size_16"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:minWidth="200dp"
                        android:text="服务电话"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/tel"
                        android:background="@null"
                        android:textSize="@dimen/content_text_size_16"
                        android:hint="输入服务电话"
                        android:textColor="@color/grey"
                        android:maxLength="15"
                        android:gravity="right|center_vertical"
                        android:text=""/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_bar"
                    android:paddingLeft="@dimen/left_right_margin"
                    android:paddingRight="@dimen/left_right_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/content_text_size_16"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:minWidth="200dp"
                        android:text="经营产品分类"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/shop_type"
                        android:background="@null"
                        android:textSize="@dimen/content_text_size_16"
                        android:hint="分类"
                        android:gravity="center_vertical"
                        android:drawableRight="@mipmap/arrow_right_gray"
                        android:drawablePadding="@dimen/left_right_margin"
                        android:textColor="@color/grey"
                        android:text=""/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_bar"
                    android:paddingLeft="@dimen/left_right_margin"
                    android:paddingRight="@dimen/left_right_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/content_text_size_16"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:minWidth="200dp"
                        android:text="开始营业时间"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/start_time"
                        android:background="@null"
                        android:textSize="@dimen/content_text_size_16"
                        android:hint="开始时间"
                        android:gravity="right|center_vertical"
                        android:drawableRight="@mipmap/arrow_right_gray"
                        android:drawablePadding="@dimen/left_right_margin"
                        android:textColor="@color/grey"
                        android:text=""/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_bar"
                    android:paddingLeft="@dimen/left_right_margin"
                    android:paddingRight="@dimen/left_right_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/content_text_size_16"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:minWidth="200dp"
                        android:text="结束营业时间"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/end_time"
                        android:background="@null"
                        android:textSize="@dimen/content_text_size_16"
                        android:hint="结束时间"
                        android:gravity="right|center_vertical"
                        android:drawableRight="@mipmap/arrow_right_gray"
                        android:drawablePadding="@dimen/left_right_margin"
                        android:textColor="@color/grey"
                        android:text=""/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_shop_center_submit_sendfee"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_bar"
                    android:paddingLeft="@dimen/left_right_margin"
                    android:paddingRight="@dimen/left_right_margin"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/content_text_size_16"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:minWidth="200dp"
                        android:text="配送费"/>

                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/tv_peisongfei"
                        android:background="@null"
                        android:textSize="@dimen/content_text_size_16"
                        android:hint="请输入配送费"
                        android:textColor="@color/grey"
                        android:gravity="right|center_vertical"
                        android:text=""
                        android:inputType="phone"
                        android:digits="1234567890."
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_shop_center_submit_freeSendfee"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_bar"
                    android:paddingLeft="@dimen/left_right_margin"
                    android:paddingRight="@dimen/left_right_margin"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/content_text_size_16"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:minWidth="200dp"
                        android:text="包邮金额"/>

                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/tv_baoyou"
                        android:background="@null"
                        android:textSize="@dimen/content_text_size_16"
                        android:hint="请输入包邮金额"
                        android:textColor="@color/grey"
                        android:gravity="right|center_vertical"
                        android:text=""
                        android:inputType="phone"
                        android:digits="1234567890."
                        />

                </LinearLayout>

                <!--                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/title_bar"
                                    android:paddingLeft="@dimen/left_right_margin"
                                    android:paddingRight="@dimen/left_right_margin"
                                    android:id="@+id/shop_info_view"

                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:textSize="@dimen/content_text_size_16"
                                        android:gravity="center_vertical"
                                        android:textColor="@color/black"
                                        android:minWidth="200dp"
                                        android:text="商家详情"/>

                                    <TextView
                                        android:layout_width="150dp"
                                        android:layout_height="match_parent"
                                        android:id="@+id/shop_info"
                                        android:background="@null"
                                        android:textSize="@dimen/content_text_size_16"
                                        android:hint="请输入商家详情"
                                        android:gravity="right|center_vertical"
                                        android:drawableRight="@mipmap/arrow_right_gray"
                                        android:drawablePadding="@dimen/left_right_margin"
                                        android:textColor="@color/grey"
                                        android:lines="1"
                                        android:ellipsize="end"
                                        android:text=""/>

                                </LinearLayout>-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="@drawable/line_divider_bg"
                android:layout_marginTop="@dimen/top_bottom_margin"
                android:background="@drawable/public_bg"
                android:paddingTop="1px"
                android:paddingBottom="1px"
                android:id="@+id/shop_info_label"
                android:showDividers="middle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_bar"
                    android:paddingLeft="@dimen/left_right_margin"
                    android:paddingRight="@dimen/left_right_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/content_text_size_16"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:minWidth="200dp"
                        android:text="营业执照编号"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/shop_code"
                        android:background="@null"
                        android:textSize="@dimen/content_text_size_16"
                        android:hint="输入营业执照编号"
                        android:textColor="@color/grey"
                        android:gravity="right|center_vertical"
                        android:maxLength="25"
                        android:text=""/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_bar"
                    android:paddingLeft="@dimen/left_right_margin"
                    android:paddingRight="@dimen/left_right_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/content_text_size_16"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:minWidth="200dp"
                        android:text="营业执照"/>

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:id="@+id/shop_code_show_image"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/shop_code_image"
                        android:background="@null"
                        android:textSize="@dimen/content_text_size_16"
                        android:hint="请上传"
                        android:gravity="right|center_vertical"
                        android:drawableRight="@mipmap/arrow_right_gray"
                        android:drawablePadding="@dimen/left_right_margin"
                        android:textColor="@color/grey"
                        android:text=""/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_bar"
                    android:paddingLeft="@dimen/left_right_margin"
                    android:paddingRight="@dimen/left_right_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/content_text_size_16"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:minWidth="200dp"
                        android:text="许可证"/>

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:id="@+id/shop_xukezheng_show_image"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/shop_xukezheng"
                        android:background="@null"
                        android:textSize="@dimen/content_text_size_16"
                        android:hint="请上传"
                        android:gravity="right|center_vertical"
                        android:drawableRight="@mipmap/arrow_right_gray"
                        android:drawablePadding="@dimen/left_right_margin"
                        android:textColor="@color/grey"
                        android:text=""/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_bar"
                    android:paddingLeft="@dimen/left_right_margin"
                    android:paddingRight="@dimen/left_right_margin"
                    android:id="@+id/shop_info_view"

                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/content_text_size_16"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:minWidth="200dp"
                        android:text="商家详情"/>

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/shop_info"
                        android:background="@null"
                        android:textSize="@dimen/content_text_size_16"
                        android:hint="请输入商家详情"
                        android:gravity="right|center_vertical"
                        android:drawableRight="@mipmap/arrow_right_gray"
                        android:drawablePadding="@dimen/left_right_margin"
                        android:textColor="@color/grey"
                        android:lines="1"
                        android:ellipsize="end"
                        android:text=""/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar"
                android:text="支付方式"
                android:textColor="@color/grey"
                android:gravity="center_vertical"
                android:id="@+id/pay_type_label"
                android:paddingLeft="@dimen/left_right_margin"
                android:textSize="@dimen/content_text_size_16"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/line_divider_bg"
                android:showDividers="middle"
                android:id="@+id/pay_type"
                android:orientation="vertical">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_bar"
                    android:drawableRight="@drawable/checkbox_bg"
                    android:button="@null"
                    android:paddingLeft="@dimen/left_right_margin"
                    android:paddingRight="@dimen/left_right_margin"
                    android:drawablePadding="@dimen/left_right_margin"
                    android:drawableLeft="@mipmap/jinbi_icon"
                    android:text="@string/pay_glad"
                    android:checked="true"
                    android:textColor="@color/black"
                    android:id="@+id/pay_gold"
                    android:background="@drawable/button_input_status_selector"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_bar"
                    android:drawableRight="@drawable/checkbox_bg"
                    android:button="@null"
                    android:paddingLeft="@dimen/left_right_margin"
                    android:paddingRight="@dimen/left_right_margin"
                    android:drawablePadding="@dimen/left_right_margin"
                    android:drawableLeft="@mipmap/zfb_icon"
                    android:text="@string/ali_pay"
                    android:id="@+id/pay_ali"
                    android:textColor="@color/black"
                    android:background="@drawable/button_input_status_selector"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_bar"
                    android:drawableRight="@drawable/checkbox_bg"
                    android:button="@null"
                    android:paddingLeft="@dimen/left_right_margin"
                    android:paddingRight="@dimen/left_right_margin"
                    android:drawablePadding="@dimen/left_right_margin"
                    android:drawableLeft="@mipmap/wechat_icon"
                    android:id="@+id/wechat_pay_shop_center"
                    android:text="微信支付"
                    android:textColor="@color/black"
                    android:background="@drawable/button_input_status_selector"
                    />

            </RadioGroup>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar"
                android:text=""
                android:textColor="@color/grey"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/left_right_margin"
                android:id="@+id/shop_money"
                android:textSize="@dimen/content_text_size_16"/>

            <LinearLayout
                android:id="@+id/ll_shop_sys_protocol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/left_right_margin"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="同意"
                    android:button="@null"
                    android:drawablePadding="@dimen/left_right_margin"
                    android:drawableLeft="@drawable/checkbox_bg"
                    android:textSize="@dimen/content_text_size_16"
                    android:textColor="@color/grey"
                    android:checked="true"
                    android:id="@+id/agreement"
                    android:background="@null"/>

                <TextView
                    android:id="@+id/tv_shop_sys_protocol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/content_text_size_16"
                    android:text="《惠享生活商户协议》"/>

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottom_button_height"
                android:text="提交审核"
                android:textColor="@color/white"
                android:textSize="@dimen/bottom_button_text_size_18"
                android:layout_margin="@dimen/left_right_margin"
                android:id="@+id/submit"
                android:background="@drawable/button_red_bg"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>