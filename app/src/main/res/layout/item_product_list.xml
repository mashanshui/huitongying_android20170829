<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:foreground="?attr/selectableItemBackground"
                                    app:cardBackgroundColor="@android:color/white"
                                    app:cardElevation="@null"
                                    app:cardPreventCornerOverlap="true"
                                    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/item_product_bg"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_product_info"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:scaleType="centerCrop"
            android:background="@mipmap/item_product_info"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_product_title"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/black_deep"
                    android:text="肥西老母鸡"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_product_distance"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    android:text="321m"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_product_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="[南七等]花甲二选一，免费替工wifi"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_product_price"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/red"
                    android:textSize="15dp"
                    android:text="￥25.6"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_product_sall_count"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/gray"
                    android:layout_marginRight="10dp"
                    android:text="已售321"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
