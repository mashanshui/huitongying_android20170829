<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huixiangshenghuo.app.ui.fragments.HomeShopRefreshFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/public_bg"
        android:orientation="horizontal"
        android:paddingRight="@dimen/left_right_margin"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/goods_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/relativeLayout11"
                android:layout_toRightOf="@+id/relativeLayout11"
                android:text="附近商户"
                android:textColor="@color/black"
                android:textSize="@dimen/content_text_size_16" />
            <RelativeLayout
                android:id="@+id/relativeLayout11"
                android:layout_width="4dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@color/colorPrimaryDark">
            </RelativeLayout>

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/content_text_size_14"
            android:gravity="center"
            android:id="@+id/more"
            android:textColor="@color/lightGrey"
            android:drawablePadding="8dp"
            android:drawableRight="@mipmap/arrow_right_gray"
            android:text="更多"/>
    </LinearLayout>


</FrameLayout>
