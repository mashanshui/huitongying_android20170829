<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_title_dialog_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center"
            android:paddingTop="@dimen/top_bottom_margin"
            android:paddingBottom="@dimen/top_bottom_margin"
            android:textSize="@dimen/content_text_size_16"
            android:text="使用惠宝支付"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/top_bottom_margin"
            android:paddingBottom="@dimen/text_lg_px"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="@dimen/top_bottom_margin"
            android:layout_marginBottom="@dimen/top_bottom_margin"
            android:layout_marginRight="24dp"
            android:paddingLeft="@dimen/left_right_margin"
            android:id="@+id/pay_num_new"
            android:background="@drawable/activity_order_confirm_dialog_text"
            android:hint="输入惠宝兑换"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/top_bottom_margin"
            android:paddingBottom="@dimen/text_lg_px"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="@dimen/top_bottom_margin"
            android:layout_marginRight="24dp"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/left_right_margin"
            android:id="@+id/pay_password_new"
            android:background="@drawable/activity_order_confirm_dialog_text"
            android:hint="请输入惠宝支付密码"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/top_bottom_margin"
            android:layout_marginRight="@dimen/left_right_margin"
            android:background="@null"
            android:textColor="@color/Grey"
            android:text="忘记密码？"
            android:id="@+id/edit_password_new"/>

        <include
            layout="@layout/line_view"
            android:layout_width="match_parent"
            android:layout_marginTop="24dp"
            android:layout_height="1px"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_button_height"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimary"
                android:text="取消"
                android:id="@+id/bt_no_new"
                android:textSize="@dimen/bottom_button_text_size_18"
                android:background="@drawable/adapter_select_grey"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/adapter_select_grey"
                android:textColor="@color/colorPrimary"
                android:text="确定"
                android:id="@+id/bt_yes_new"
                android:textSize="@dimen/bottom_button_text_size_18"
                android:layout_height="match_parent"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>