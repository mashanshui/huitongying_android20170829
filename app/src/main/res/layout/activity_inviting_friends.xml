<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
    >

    <include
        layout="@layout/title_bar_1"
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        ></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/left_right_margin"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_share_id"
                    android:textSize="@dimen/content_text_size_16"
                    />

                <TextView
                    android:id="@+id/tv_shareid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:id="@+id/code_image"/>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_share_link"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="@dimen/left_right_margin"
                android:textSize="@dimen/content_text_size_16"
                />

            <TextView
                android:id="@+id/tv_share_link_inviting_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="@dimen/left_right_margin"
                android:textSize="@dimen/content_text_size_16"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottom_button_height"
                android:text="@string/text_copy_link"
                android:textColor="@color/white"
                android:textSize="@dimen/bottom_button_text_size_18"
                android:layout_margin="@dimen/left_right_margin"
                android:id="@+id/bt_copy_link_inviting_friends"
                android:background="@drawable/button_red_bg"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>