<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huixiangshenghuo.app.ui.HomeActivity">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_title_bar"
        android:layout_alignParentBottom="true"
        android:id="@+id/home_tab"
        android:background="@color/mainBackColor"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/home_page"
            android:button="@null"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="@string/home_page"
            android:textColor="@drawable/home_tab_text_selector"
            android:drawableTop="@drawable/home_page_icon_selector"
            android:checked="true"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/home_mall"
            android:button="@null"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:paddingTop="5dp"
            android:textColor="@drawable/home_tab_text_selector"
            android:drawableTop="@drawable/home_mall_icon_selector"
            android:text="@string/home_mall"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/home_shop"
            android:button="@null"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:paddingTop="5dp"
            android:textColor="@drawable/home_tab_text_selector"
            android:drawableTop="@drawable/home_shop_icon_selector"
            android:text="@string/home_shop"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/home_mine"
            android:button="@null"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="@string/home_mine"
            android:drawableTop="@drawable/home_mine_icon_selector"
            android:textColor="@drawable/home_tab_text_selector"
            />
    </RadioGroup>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/home_tab"
        android:id="@+id/view_page">
    </android.support.v4.view.ViewPager>
    <include layout="@layout/line_view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/view_page"
        android:id="@+id/line1"></include>
</RelativeLayout>
