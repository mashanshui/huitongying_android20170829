<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huixiangshenghuo.app.ui.login.RegUserActivity">
    <include layout="@layout/title_bar_1"
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        ></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/top_bottom_margin"
        android:paddingLeft="@dimen/left_right_margin"
        android:background="@drawable/public_bg">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar"
            android:background="@null"
            android:textSize="@dimen/content_text_size_16"
            android:maxLength="15"
            android:id="@+id/username"
            android:digits="0123456789qwertyuioplkjhgfdsazxcvbnmABCDEFGHIJKLMNOPQRSTUVWXYZ_"
            android:hint="@string/set_username"/>
        <include layout="@layout/line_view"
            android:layout_width="match_parent"
            android:layout_height="1px"></include>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar"
            android:background="@null"
            android:textSize="@dimen/content_text_size_16"
            android:maxLength="15"
            android:id="@+id/password"
            android:inputType="textPassword"
            android:hint="@string/set_password"/>
        <include layout="@layout/line_view"
            android:layout_width="match_parent"
            android:layout_height="1px"></include>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar"
            android:background="@null"
            android:textSize="@dimen/content_text_size_16"
            android:maxLength="15"
            android:id="@+id/password_two"
            android:inputType="textPassword"
            android:hint="@string/set_password_two"/>
        <include layout="@layout/line_view"
            android:layout_width="match_parent"
            android:layout_height="1px"></include>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar"
            android:background="@null"
            android:textSize="@dimen/content_text_size_16"
            android:id="@+id/tui_user"
            android:maxLength="15"
            android:hint="推荐人(请输入推荐人的登录账户)"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sys_protocol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/left_right_margin"
        android:layout_marginTop="@dimen/top_bottom_margin"
        android:orientation="horizontal">
        <CheckBox
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/checkbox"
            android:checked="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同意"
            android:textSize="@dimen/content_button_text_size_16"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《惠享生活用户协议》"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/content_button_text_size_16"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_button_height"
        android:text="@string/reg"
        android:textColor="@color/white"
        android:textSize="@dimen/bottom_button_text_size_18"
        android:layout_margin="@dimen/left_right_margin"
        android:id="@+id/reg"
        android:background="@drawable/button_red_bg"/>

</LinearLayout>
