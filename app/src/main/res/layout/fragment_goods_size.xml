<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/white"
              tools:context="com.huixiangshenghuo.app.ui.activityshopcircle.GoodsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:text="选规格"
        android:textSize="@dimen/title_text_size"
        android:gravity="center"
        />

    <include
        android:layout_width="match_parent"
        android:layout_height="1px"
        layout="@layout/line_view"
        ></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/size_list">


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="数量"
        android:layout_marginLeft="@dimen/left_right_margin"
        android:layout_marginTop="@dimen/top_bottom_margin"
        android:textSize="@dimen/content_text_size_16"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/top_bottom_margin"
        android:visibility="visible"
        android:paddingLeft="@dimen/left_right_margin"
        android:id="@+id/add_button_lin">

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="@dimen/left_right_margin"
            android:text="-"
            android:textSize="@dimen/title_text_size"
            android:layout_marginRight="@dimen/left_right_margin"
            android:id="@+id/move_button"
            android:background="@drawable/goods_add_button_selector"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/content_text_size_14"
            android:textColor="@color/black"
            android:id="@+id/num"
            android:text="0"/>

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textColor="@color/colorPrimary"
            android:text="+"
            android:layout_marginLeft="@dimen/left_right_margin"
            android:textSize="@dimen/title_text_size"
            android:id="@+id/add_button"
            android:background="@drawable/goods_add_button_selector"/>
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/top_bottom_margin"
        android:layout_height="1px"
        layout="@layout/line_view"
        ></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_button_height">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="取消"
            android:textSize="@dimen/bottom_button_text_size_18"
            android:background="@drawable/adapter_select_grey"
            android:id="@+id/cancel_button"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="确定"
            android:id="@+id/yes_button"
            android:textSize="@dimen/bottom_button_text_size_18"
            android:background="@drawable/adapter_select_grey"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
