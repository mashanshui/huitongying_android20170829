<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/left_right_margin"
        >

        <ImageView
            android:id="@+id/iv_pic_regular_members"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/business_default"
            android:scaleType="fitXY"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/left_right_margin"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

                <TextView
                    android:text="陈阳"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/tv_name_regular_members"
                    android:textSize="@dimen/content_text_size_16"
                    />

                <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_name_regular_members"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_phone_regular_members"
                    android:layout_marginLeft="@dimen/margin_6"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

                <TextView
                    android:text="推荐时间:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/textView11"
                    android:textSize="@dimen/content_text_size_16"
                    />

                <TextView
                    android:text="2016-04-10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/textView11"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_recommend_time_regular_members"
                    android:layout_marginLeft="@dimen/margin_6"
                    android:textSize="@dimen/content_text_size_16"
                    />
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>