<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mainBackColor"
    tools:context="com.huixiangshenghuo.app.ui.mine.MineInfoActivity">
    <include layout="@layout/title_bar_1"
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        ></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/top_bottom_margin"
        android:paddingTop="1px"
        android:paddingBottom="1px"
        android:layout_marginBottom="@dimen/top_bottom_margin"
        android:background="@drawable/public_bg">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar"
            android:drawableRight="@mipmap/arrow_right_gray"
            android:paddingRight="@dimen/left_right_margin"
            android:text="编辑资料"
            android:paddingLeft="@dimen/left_right_margin"
            android:textSize="@dimen/content_button_text_size_16"
            android:gravity="left|center_vertical"
            android:textColor="@color/black"
            android:id="@+id/tab1"
            android:background="@drawable/button_input_status_selector"/>

        <include layout="@layout/line_view"
            android:layout_width="match_parent"
            android:layout_height="1px"></include>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar"
            android:drawableRight="@mipmap/arrow_right_gray"
            android:paddingRight="@dimen/left_right_margin"
            android:text="实名认证"
            android:paddingLeft="@dimen/left_right_margin"
            android:textSize="@dimen/content_button_text_size_16"
            android:gravity="left|center_vertical"
            android:id="@+id/tab2"
            android:textColor="@color/black"
            android:background="@drawable/button_input_status_selector"/>
        <include layout="@layout/line_view"
            android:layout_width="match_parent"
            android:layout_height="1px"></include>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar"
            android:drawableRight="@mipmap/arrow_right_gray"
            android:paddingRight="@dimen/left_right_margin"
            android:text="安全设置"
            android:paddingLeft="@dimen/left_right_margin"
            android:textSize="@dimen/content_button_text_size_16"
            android:gravity="left|center_vertical"
            android:id="@+id/tab3"
            android:textColor="@color/black"
            android:background="@drawable/button_input_status_selector"/>

        <include layout="@layout/line_view"
            android:layout_width="match_parent"
            android:layout_height="1px"></include>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar"
            android:drawableRight="@mipmap/arrow_right_gray"
            android:paddingRight="@dimen/left_right_margin"
            android:text="我的银行卡"
            android:paddingLeft="@dimen/left_right_margin"
            android:textSize="@dimen/content_button_text_size_16"
            android:gravity="left|center_vertical"
            android:id="@+id/tab6"
            android:textColor="@color/black"
            android:background="@drawable/button_input_status_selector"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar"
            android:drawableRight="@mipmap/arrow_right_gray"
            android:paddingRight="@dimen/left_right_margin"
            android:text="我的二维码"
            android:paddingLeft="@dimen/left_right_margin"
            android:textSize="@dimen/content_button_text_size_16"
            android:gravity="left|center_vertical"
            android:id="@+id/tab4"
            android:textColor="@color/black"
            android:background="@drawable/button_input_status_selector"
            android:visibility="gone"
            />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar"
        android:paddingRight="@dimen/left_right_margin"
        android:text="清除缓存"
        android:paddingLeft="@dimen/left_right_margin"
        android:textSize="@dimen/content_button_text_size_16"
        android:gravity="left|center_vertical"
        android:id="@+id/tab5"
        android:textColor="@color/black"
        android:background="@drawable/button_input_status_selector"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_button_height"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="@dimen/bottom_button_text_size_18"
        android:layout_margin="@dimen/left_right_margin"
        android:id="@+id/logout"
        android:background="@drawable/button_red_bg"/>

</LinearLayout>
