<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
    >

    <RelativeLayout
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12"

        android:background="@drawable/bottom_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--  android:layout_marginRight="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_12"-->
        <RelativeLayout
            android:id="@+id/isc_choose_lyt"
            android:paddingRight="@dimen/dp_12"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/dp_12"
            >

            <ImageView
                android:id="@+id/isc_choose_img"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/wxz"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/isc_good_img"
            android:layout_toRightOf="@id/isc_choose_lyt"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@mipmap/business_default"/>

        <LinearLayout
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@id/isc_good_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_12"
            >

            <TextView
                android:id="@+id/isc_name_txt"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="巧克力蛋糕"
                android:textSize="@dimen/content_text_size_16"
                android:textColor="@color/colorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/isc_price_txt"
                    android:text="￥0.00"
                    android:textSize="@dimen/content_text_size_16"
                    android:textColor="@color/colorRed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/isc_j_img"
                        android:layout_width="wrap_content"
                        android:paddingLeft="@dimen/dp_12"
                        android:paddingRight="@dimen/dp_12"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/j_j"/>

                    <TextView
                        android:id="@+id/isc_num_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/content_text_size_14"
                        android:text="1"/>

                    <ImageView
                        android:id="@+id/isc_add_img"
                        android:layout_width="wrap_content"
                        android:paddingLeft="@dimen/dp_12"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/add_add"/>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>