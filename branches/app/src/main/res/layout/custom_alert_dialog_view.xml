<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_alert_dialog_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_alert_dialog_title"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:text="消息提示"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确定要删除？"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:id="@+id/message"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="确定"
                android:id="@+id/left_button"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="@drawable/custom_alert_dialog_leftbutton"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="取消"
                android:id="@+id/right_button"
                android:textColor="@color/white"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="@drawable/custom_alert_dialog_rightbutton"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>