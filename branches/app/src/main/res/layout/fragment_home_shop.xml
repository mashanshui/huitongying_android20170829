<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huixiangshenghuo.app.ui.fragments.HomeShopFragment">

    <com.doumee.huitongying.view.RefreshLayout
        android:id="@+id/rl_shop_sx"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
     <com.doumee.huitongying.view.ListenerScrollView
         android:id="@+id/home_scrollview"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_below="@+id/relativeLayout2"
         android:scrollbars="none"
         android:fillViewport="false">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             >
             <com.doumee.huitongying.view.BannerView
                 android:id="@+id/view_banner"
                 android:layout_width="match_parent"
                 android:layout_height="166dp"/>

             <android.support.v4.view.ViewPager
                 android:id="@+id/vp_menu"
                 android:layout_width="match_parent"
                 android:paddingTop="10dp"
                 android:background="@color/white"
                 android:layout_height="170dp"/>

             <RadioGroup
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:background="@color/white"
                 android:gravity="center"
                 android:id="@+id/iv_group">

             </RadioGroup>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="40dp"
                 android:background="@drawable/public_bg"
                 android:orientation="horizontal"
                 android:paddingRight="@dimen/left_right_margin"
                 android:layout_marginTop="@dimen/top_bottom_margin">
                 <RelativeLayout
                     android:layout_width="wrap_content"
                     android:layout_weight="1"
                     android:layout_height="match_parent">
                     <TextView
                         android:id="@+id/goods_type"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_centerVertical="true"
                         android:layout_marginLeft="11dp"
                         android:layout_marginStart="5dp"
                         android:layout_toEndOf="@+id/relativeLayout11"
                         android:layout_toRightOf="@+id/relativeLayout11"
                         android:text="附近商户"
                         android:textColor="@color/black"
                         android:textSize="@dimen/content_text_size_16" />
                     <RelativeLayout
                         android:id="@+id/relativeLayout11"
                         android:layout_width="4dp"
                         android:layout_height="20dp"
                         android:layout_alignParentLeft="true"
                         android:layout_marginLeft="10dp"
                         android:layout_alignParentStart="true"
                         android:layout_centerVertical="true"
                         android:background="@color/colorPrimaryDark">
                     </RelativeLayout>

                 </RelativeLayout>
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:textSize="@dimen/content_text_size_14"
                     android:gravity="center"
                     android:id="@+id/more"
                     android:textColor="@color/lightGrey"
                     android:drawablePadding="8dp"
                     android:drawableRight="@mipmap/arrow_right_gray"
                     android:text="更多"/>
             </LinearLayout>
             <com.doumee.huitongying.view.MyListView
                 android:id="@+id/lv_shop"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">
             </com.doumee.huitongying.view.MyListView>
         </LinearLayout>


     </com.doumee.huitongying.view.ListenerScrollView>
    </com.doumee.huitongying.view.RefreshLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <RelativeLayout
            android:id="@+id/rl_businessHead"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorPrimary">
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/left_right_margin"
            android:paddingRight="@dimen/left_right_margin"
            android:paddingTop="16dp"
            >

            <TextView
                android:id="@+id/tv_home_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/left_right_margin"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="@dimen/content_text_size_16"
                android:drawablePadding="@dimen/dp_5"
                android:drawableRight="@mipmap/dw_icon"
                android:text="选择城市"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/label_bar"
                android:paddingLeft="@dimen/left_right_margin"
                android:text="搜索商户"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/left_right_margin"
                android:id="@+id/search_bar"
                android:layout_marginLeft="@dimen/left_right_margin"
                android:background="@drawable/bg_title_text_business"
                android:textSize="@dimen/content_text_size_14"
                android:textColor="@color/white"
                android:drawableLeft="@mipmap/search_btn_white"/>

        </LinearLayout>
    </FrameLayout>
</FrameLayout>
