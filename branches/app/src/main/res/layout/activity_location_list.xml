<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        layout="@layout/title_bar_1"
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        ></include>
    <com.doumee.huitongying.view.EditTextWithDel
        android:layout_width="match_parent"
        android:layout_height="@dimen/label_bar"
        android:id="@+id/search_bar"
        android:layout_marginLeft="@dimen/left_right_margin"
        android:layout_marginRight="@dimen/left_right_margin"
        android:layout_marginTop="@dimen/top_bottom_margin"
        android:drawablePadding="@dimen/left_right_margin"
        android:paddingLeft="@dimen/left_right_margin"
        android:hint="搜索城市"
        android:background="@drawable/edittext_bg"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/label_bar"
        android:layout_marginTop="@dimen/top_bottom_margin"
        android:text="当前定位城市"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/left_right_margin"
        android:background="@color/button_gey"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:text=""
        android:gravity="center_vertical"
        android:id="@+id/city"
        android:background="@drawable/button_input_status_selector"
        android:paddingLeft="@dimen/left_right_margin"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/label_bar"
        android:text="全部城市"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/left_right_margin"
        android:background="@color/button_gey"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_view"
        android:paddingLeft="@dimen/left_right_margin"
        ></ListView>
</LinearLayout>