<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackColor"
    android:orientation="vertical"
    tools:context="com.huixiangshenghuo.app.ui.mine.MineGoldActivity">
    <include layout="@layout/title_bar_1"
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        ></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="@dimen/left_right_margin"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/content_text_size_14"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"
            android:text="惠宝（元）"/>
        <com.doumee.huitongying.view.CountView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:id="@+id/gold"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/top_bottom_margin"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/top_bottom_margin"
        android:divider="@drawable/line_divider_bg"
        android:showDividers="middle"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar"
            android:background="@drawable/button_input_status_selector"
            android:text="充值"
            android:textSize="@dimen/content_text_size_16"
            android:textColor="@color/black"
            android:paddingLeft="@dimen/left_right_margin"
            android:paddingRight="@dimen/left_right_margin"
            android:id="@+id/tab1"
            android:drawableLeft="@mipmap/chongzhi_icon"
            android:drawablePadding="@dimen/left_right_margin"
            android:drawableRight="@mipmap/arrow_right_gray"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar"
            android:background="@drawable/button_input_status_selector"
            android:text="提现"
            android:textSize="@dimen/content_text_size_16"
            android:textColor="@color/black"
            android:paddingLeft="@dimen/left_right_margin"
            android:paddingRight="@dimen/left_right_margin"
            android:id="@+id/tab2"
            android:drawableLeft="@mipmap/tx_icon"
            android:drawablePadding="@dimen/left_right_margin"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/arrow_right_gray"/>


    </LinearLayout>


</LinearLayout>
