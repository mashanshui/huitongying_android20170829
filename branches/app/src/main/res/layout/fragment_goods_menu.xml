<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              tools:context="com.huixiangshenghuo.app.ui.activityshopcircle.GoodsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:id="@+id/menu_line"
            android:visibility="visible"
            android:background="@color/colorPrimary"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="菜单一"
            android:gravity="center"
            android:checked="true"
            android:id="@+id/menu_radio"
            android:textSize="@dimen/content_text_size_14"
            android:background="@drawable/goods_menu_bg"
            android:textColor="@drawable/home_tab_font_selecter"/>
    </LinearLayout>
</LinearLayout>
