<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/left_right_margin">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/icon"
            android:id="@+id/logo"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/logo"
            android:layout_marginLeft="@dimen/left_right_margin"
            android:id="@+id/label"
            android:orientation="horizontal">
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/name"
                android:textColor="@color/black"
                android:text="支付宝"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/content_text_size_16"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time"
                android:textColor="@color/grey"
                android:text="2016-12-14"
                android:textSize="@dimen/content_text_size_14"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:id="@+id/message"
            android:textSize="@dimen/content_text_size_14"
            android:text="恭喜你恭喜你恭喜你恭喜你恭喜你恭喜你恭喜你恭喜你恭喜你恭喜你恭喜你恭喜你恭喜你恭喜你恭喜你恭喜你恭喜你恭喜你"
            android:layout_toRightOf="@+id/logo"
            android:layout_marginLeft="@dimen/left_right_margin"
            android:layout_marginTop="@dimen/top_bottom_margin"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@+id/label"/>


    </RelativeLayout>

</LinearLayout>