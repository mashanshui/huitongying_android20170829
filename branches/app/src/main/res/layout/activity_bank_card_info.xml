<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mainBackColor"
    tools:context="com.huixiangshenghuo.app.ui.mine.BankCardInfoActivity">
    <include layout="@layout/title_bar_1"
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        ></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/line_divider_bg"
        android:showDividers="middle"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/top_bottom_margin"
        android:background="@drawable/public_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar"
            android:paddingLeft="@dimen/left_right_margin"
            android:paddingRight="@dimen/left_right_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="@dimen/content_text_size_16"
                android:gravity="center_vertical"
                android:text="开户银行"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/grey"
                android:textSize="@dimen/content_text_size_16"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/left_right_margin"
                android:drawableRight="@drawable/arrow_bottom_gray"
                android:id="@+id/bank_list"
                android:drawablePadding="@dimen/left_right_margin"
                android:text="开户银行"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar"
            android:paddingLeft="@dimen/left_right_margin"
            android:paddingRight="@dimen/left_right_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="@dimen/content_text_size_16"
                android:gravity="center_vertical"
                android:text="开户行所在地"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:id="@+id/bank_address"
                android:textSize="@dimen/content_text_size_16"
                android:gravity="right|center_vertical"
                android:hint="输入开户行所在地"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar"
            android:paddingLeft="@dimen/left_right_margin"
            android:paddingRight="@dimen/left_right_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="@dimen/content_text_size_16"
                android:gravity="center_vertical"
                android:text="银行卡号"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:id="@+id/bank_card"
                android:textSize="@dimen/content_text_size_16"
                android:inputType="number"
                android:maxLength="25"
                android:gravity="right|center_vertical"
                android:hint="输入银行卡号"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar"
            android:paddingLeft="@dimen/left_right_margin"
            android:paddingRight="@dimen/left_right_margin"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="@dimen/content_text_size_16"
                android:gravity="center_vertical"
                android:text="持卡人姓名"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:id="@+id/bank_user"
                android:maxLength="10"
                android:textSize="@dimen/content_text_size_16"
                android:gravity="right|center_vertical"
                android:hint="请输入持卡人姓名"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
