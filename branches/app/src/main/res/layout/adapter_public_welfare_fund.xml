<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/left_right_margin"
        >

        <TextView
            android:text="coocoo10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/tv_name_public_welfare_fund"
            android:textSize="@dimen/content_text_size_16"
            />

        <TextView
            android:text="捐赠了100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_name_public_welfare_fund"
            android:layout_toEndOf="@+id/tv_name_public_welfare_fund"
            android:id="@+id/tv_integralnum_public_welfare_fund"
            android:textSize="@dimen/content_text_size_16"
            />

        <TextView
            android:text="2016-10-1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/tv_time_public_welfare_fund"
            android:textSize="@dimen/content_text_size_16"
            />


    </RelativeLayout>
</LinearLayout>